<div class="container">
    <h5>Hola, {{findUser.username}}, eres un/a maquineta. ¿Has visto Jaula ya?</h5>
    <hr>
    <h4>Tus películas </h4>
    <div class="container">
        <div class="row">
            <section class="text-center">

                <div class="row align-items-end">
                    {{#each movies}}
                    <div class="col-lg-3 col-md-12 mb-4">
                        <div class="card detailsCard">
                            <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="dark">
                                <img src="{{image}}" class="img-fluid" />
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-center">
                                    <h5 class="card-title text-center">{{title}}</h5>
                                    <p class="card-text">
                                        {{description}}
                                    </p>
                                </div>
                                <div class="d-flex justify-content-start mt-5">
                                    <a href="/peliculas/detalles/{{_id}}" class="btn btn-dark">Ir a
                                        detalles</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </section>
        </div>
    </div>
</div>