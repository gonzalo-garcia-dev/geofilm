<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Crear nuevo libro</h1>

            <form action="/libros/crear" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Título</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Descripción</label>
                    <input type="text" class="form-control" id="description" name="description">
                </div>
                <div class="mb-3">
                    <label for="author" class="form-label">Autor/a</label>
                    <input type="text" class="form-control" id="author" name="author">
                </div>
                <div class="mb-3">
                    <label for="rate" class="form-label">Puntuación</label>
                    <input type="number" class="form-control" id="rate" name="rating">
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Crear libro</button>
                </div>

            </form>

            <hr>
        </div>
    </div>



    <a href="/" class="btn btn-dark">Volver al inicio</a>
</div>