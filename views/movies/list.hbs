<div class="container">
    <div class="row">
        <section class="text-center">
            <h4 class="mb-5"><strong>Todas las pel√≠culas de Geofilm</strong></h4>

            <div class="row align-items-center">
                {{#each movie}}
                <div class="col-lg-3 col-md-12 mb-4">
                    <div class="card detailsCard">
                        <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="dark">
                            <a href="/peliculas/detalles/{{_id}}" class="btn btn-dark"><img src="{{image}}"
