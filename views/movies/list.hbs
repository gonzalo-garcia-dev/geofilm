                            <div class="d-flex justify-center">
                                <p class="card-title text-center">{{title}}</p>
                                <p class="card-text">
                                    {{description}}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </section>
    </div>
</div>